{
  "manifest_version": 3,
  "name": "DeTrumper",
  "version": "1.0",
  "description": "Removes elements with specific words from Reddit and YouTube",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "css": ["reddit-content.css"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}